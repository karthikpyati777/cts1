package com.basic.javapgms;

public class P1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int n=5;
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print("*"+" ");
			}
			System.out.println();
		}
		
		System.out.println();
		
		for(int i=0;i<=n;i++) {
			for(int j=0;j<i;j++) {
				System.out.print(i);
			}
			System.out.println();
		}
		
		System.out.println();
		
		for(int i=n;i>=1;i--) {
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println();
		
		
		for(int i=1;i<=n;i++) {
			for(int j=i;j<=n;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println();
		
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=n-i+1;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println();
		
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<i+1;j++) {
				System.out.print(j+" ");
			}
			System.out.println();
		}
		System.out.println();
		
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<i+1;j++) {
				System.out.print(i+" ");
			}
			System.out.println();
		}
		
		
System.out.println();
		
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<i+1;j++) {
				System.out.print(i-j+1);
			}
			System.out.println();
		}
		
		System.out.println();
		
	
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
			for(int x=n;x>=1;x--) {
			for(int k=1;k<=n;k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		}
	}
	

}
